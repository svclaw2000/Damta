<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:paddingHorizontal="@dimen/register_padding_horizontal"
    android:paddingTop="@dimen/register_padding_top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/medium_icon"
            android:layout_height="@dimen/medium_icon"
            android:src="@drawable/back_arrow"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next"
            android:fontFamily="@font/noto_sans_cjk_kr_black"
            android:textSize="@dimen/register_subtitle_text"
            android:textColor="@color/dark"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/register_content_padding_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/number_point_5"
                android:fontFamily="@font/noto_sans_cjk_kr_bold"
                android:textSize="@dimen/register_title_text"
                android:textColor="@color/highlight"
                android:layout_marginTop="@dimen/register_number_margin_top"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_information_5"
                android:fontFamily="@font/noto_sans_cjk_kr_bold"
                android:textSize="@dimen/register_title_text"
                android:textColor="@color/dark"
                android:layout_marginTop="@dimen/register_title_margin_top"
                android:layout_marginStart="@dimen/register_title_margin_start"/>
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <CheckBox
                    android:layout_width="@dimen/register_density_width"
                    android:layout_height="@dimen/register_density_height"
                    android:background="@drawable/density"
                    android:button="@color/invisible"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <CheckBox
                    android:layout_width="@dimen/register_density_width"
                    android:layout_height="@dimen/register_density_height"
                    android:background="@drawable/density"
                    android:button="@color/invisible" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <CheckBox
                    android:layout_width="@dimen/register_density_width"
                    android:layout_height="@dimen/register_density_height"
                    android:background="@drawable/density"
                    android:button="@color/invisible"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <CheckBox
                    android:layout_width="@dimen/register_density_width"
                    android:layout_height="@dimen/register_density_height"
                    android:background="@drawable/density"
                    android:button="@color/invisible" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <CheckBox
                    android:layout_width="@dimen/register_density_width"
                    android:layout_height="@dimen/register_density_height"
                    android:background="@drawable/density"
                    android:button="@color/invisible"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/density_low"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/register_density_text"
                    android:fontFamily="@font/noto_sans_cjk_kr_regular" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/density_medium"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/register_density_text"
                    android:fontFamily="@font/noto_sans_cjk_kr_regular" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/density_high"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/register_density_text"
                    android:fontFamily="@font/noto_sans_cjk_kr_regular" />
            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2"/>
    </LinearLayout>
</LinearLayout>