<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/search_margin" >

        <TextView
            android:id="@+id/tv_highlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="중구 을지로"
            android:textColor="@color/highlight"
            android:textSize="@dimen/search_content_text"
            android:fontFamily="@font/noto_sans_cjk_kr_bold" />

        <TextView
            android:id="@+id/tv_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text=" 3가"
            android:textColor="@color/dark"
            android:textSize="@dimen/search_content_text"
            android:fontFamily="@font/noto_sans_cjk_kr_bold" />
    </LinearLayout>

    <View
        style="@style/SplitLineHorizontal"
        android:background="@color/split_gray"/>
</LinearLayout>