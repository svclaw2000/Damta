<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        
        <ImageView
            android:layout_width="@dimen/login_dirt_width"
            android:layout_height="@dimen/login_dirt_height"
            android:src="@drawable/login_dirt1"
            android:layout_gravity="start|bottom"
            android:layout_marginBottom="@dimen/login_dirt_margin" />

        <ImageView
            android:layout_width="@dimen/login_dirt_width"
            android:layout_height="@dimen/login_dirt_height"
            android:src="@drawable/login_dirt2"
            android:layout_gravity="end|top"
            android:layout_marginTop="@dimen/login_dirt_margin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_title"
            android:fontFamily="@font/noto_sans_cjk_kr_black"
            android:textSize="@dimen/login_title_text"
            android:textColor="@color/dark"
            android:shadowRadius="5.0"
            android:shadowColor="@color/dark"
            android:layout_gravity="start|bottom"
            android:layout_margin="@dimen/login_title_margin"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/dark"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/login_padding_horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <ImageView
                android:layout_width="@dimen/login_icon"
                android:layout_height="@dimen/login_icon"
                android:src="@drawable/login_id" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/login_text"
                android:backgroundTint="@color/login_text"/>
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/login_icon"
                android:layout_height="@dimen/login_icon"
                android:src="@drawable/login_pw" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/login_text"
                android:backgroundTint="@color/login_text"/>
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_btn"
            android:textColor="@color/login_text"
            android:gravity="center"
            android:padding="@dimen/login_btn_padding"
            android:background="@drawable/btn_login"
            android:fontFamily="@font/noto_sans_cjk_kr_bold"
            android:textSize="@dimen/login_text"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_register_btn"
            android:fontFamily="@font/noto_sans_cjk_kr_bold"
            android:textSize="@dimen/login_text"
            android:textColor="@color/login_text"
            android:layout_gravity="center"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="10" />
    </LinearLayout>
</LinearLayout>