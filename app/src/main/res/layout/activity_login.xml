<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="@dimen/login_dirt_width"
                android:layout_height="@dimen/login_dirt_height"
                android:src="@drawable/login_dirt1"
                android:layout_gravity="start|bottom"
                android:layout_marginBottom="@dimen/login_dirt_margin" />

            <ImageView
                android:layout_width="@dimen/login_dirt_width"
                android:layout_height="@dimen/login_dirt_height"
                android:src="@drawable/login_dirt2"
                android:layout_gravity="end|top"
                android:layout_marginTop="@dimen/login_dirt_margin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_title"
                android:fontFamily="@font/noto_sans_cjk_kr_black"
                android:textSize="@dimen/login_title_text"
                android:textColor="@color/dark"
                android:shadowRadius="5.0"
                android:shadowColor="@color/dark"
                android:layout_gravity="start|bottom"
                android:layout_margin="@dimen/login_title_margin"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/dark"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/login_padding_horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <ImageView
                    android:layout_width="@dimen/medium_icon"
                    android:layout_height="@dimen/medium_icon"
                    android:src="@drawable/login_id" />

                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingHorizontal="@dimen/input_padding_horizontal"
                    tools:text="abc123"
                    android:inputType="text"
                    android:textSize="@dimen/login_text"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/noto_sans_cjk_kr_medium"
                    android:backgroundTint="@android:color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/medium_icon"
                    android:layout_height="@dimen/medium_icon"
                    android:src="@drawable/login_pw" />

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingHorizontal="@dimen/input_padding_horizontal"
                    tools:text="abc123"
                    android:inputType="textPassword"
                    android:textSize="@dimen/login_text"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/noto_sans_cjk_kr_medium"
                    android:backgroundTint="@android:color/white"/>
            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <CheckBox
                    android:id="@+id/cb_save_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@color/invisible"
                    android:text="@string/save_username"
                    android:textSize="@dimen/login_checkbox_text"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/noto_sans_cjk_kr_medium"
                    android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="2" />

                <CheckBox
                    android:id="@+id/cb_auto_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@color/invisible"
                    android:text="@string/auto_login"
                    android:textSize="@dimen/login_checkbox_text"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/noto_sans_cjk_kr_medium"
                    android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login_btn"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:padding="@dimen/login_btn_padding"
                android:background="@drawable/btn_login"
                android:fontFamily="@font/noto_sans_cjk_kr_bold"
                android:textSize="@dimen/login_text"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/btn_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_register"
                android:fontFamily="@font/noto_sans_cjk_kr_bold"
                android:textSize="@dimen/login_text"
                android:textColor="@android:color/white"
                android:layout_gravity="center"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="10" />
        </LinearLayout>
    </LinearLayout>

    <include
        android:id="@+id/popup_warning"
        layout="@layout/popup_warning"
        android:visibility="gone" />
</FrameLayout>