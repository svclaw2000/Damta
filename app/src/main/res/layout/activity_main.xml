<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--
    <net.daum.mf.map.api.MapView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/main_search_margin"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/search_input"
            android:gravity="center"
            android:paddingHorizontal="@dimen/main_search_padding_horizontal"
            android:paddingVertical="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="검색"
                android:backgroundTint="@color/invisible"
                android:textSize="@dimen/main_search_text"
                android:fontFamily="@font/noto_sans_cjk_kr_medium" />

            <ImageView
                android:layout_width="@dimen/small_icon"
                android:layout_height="@dimen/small_icon"
                android:src="@drawable/main_search"/>
        </LinearLayout>

        <Space
            android:layout_width="@dimen/main_search_margin"
            android:layout_height="0dp" />

        <LinearLayout
            android:layout_width="@dimen/main_settings_icon"
            android:layout_height="@dimen/main_settings_icon"
            android:orientation="horizontal"
            android:background="@drawable/search_input"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/small_icon"
                android:layout_height="@dimen/small_icon"
                android:src="@drawable/main_settings" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/main_underbar"
            android:adjustViewBounds="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/large_icon"
                        android:layout_height="@dimen/large_icon"
                        android:src="@drawable/register_place" />
                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/large_icon"
                        android:layout_height="@dimen/large_icon"
                        android:src="@drawable/mypage"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/main_gps_icon"
            android:layout_height="@dimen/main_gps_icon"
            android:src="@drawable/gps_locate"
            android:layout_gravity="center"/>
    </FrameLayout>
</FrameLayout>