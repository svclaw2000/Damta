<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btn_more_image"
    android:layout_width="@dimen/more_photo_width"
    android:layout_height="@dimen/more_photo_height"
    android:orientation="horizontal"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/more_photo"
        android:textSize="@dimen/detail_more_photo_text"
        android:textColor="@color/dark"
        android:fontFamily="@font/noto_sans_cjk_kr_medium" />

    <ImageView
        android:layout_width="@dimen/small_icon"
        android:layout_height="@dimen/small_icon"
        android:src="@drawable/next_arrow" />
</LinearLayout>