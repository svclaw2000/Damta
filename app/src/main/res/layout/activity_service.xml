<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/topbar_padding_horizontal">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/medium_icon"
            android:layout_height="@dimen/medium_icon"
            android:src="@drawable/back_arrow"
            android:layout_gravity="bottom|start"
            android:layout_marginTop="@dimen/back_margin"
            android:layout_marginBottom="@dimen/back_margin" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mypage_title_green"
                android:layout_marginStart="@dimen/mypage_title_green_margin_start"
                android:layout_marginTop="@dimen/mypage_title_green_margin_top">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/mypage_title_text"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/noto_sans_cjk_kr_medium"
                    android:padding="@dimen/mypage_title_padding"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mypage_title_dark"
                android:layout_marginStart="@dimen/mypage_title_dark_margin_start"
                android:layout_marginTop="@dimen/mypage_title_dark_margin_top">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings"
                    android:textSize="@dimen/mypage_title_text"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/noto_sans_cjk_kr_medium"
                    android:padding="@dimen/mypage_title_padding"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/service_title"
        android:textSize="@dimen/mypage_subtitle_text"
        android:textColor="@color/dark"
        android:fontFamily="@font/noto_sans_cjk_kr_bold"
        android:layout_marginTop="@dimen/mypage_subtitle_margin_vertical"
        android:layout_marginStart="@dimen/mypage_subtitle_margin_horizontal"
        android:layout_marginEnd="@dimen/mypage_subtitle_margin_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/service_subtitle1"
        android:textSize="@dimen/service_content_text"
        android:textColor="@color/dark"
        android:fontFamily="@font/noto_sans_cjk_kr_medium"
        android:layout_marginStart="@dimen/mypage_subtitle_margin_horizontal"
        android:layout_marginEnd="@dimen/mypage_subtitle_margin_horizontal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/mypage_subtitle_margin_horizontal"
        android:layout_marginEnd="@dimen/mypage_subtitle_margin_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/service_subtitle2"
            android:textSize="@dimen/service_content_text"
            android:textColor="@color/dark"
            android:fontFamily="@font/noto_sans_cjk_kr_medium"
            android:layout_marginEnd="@dimen/small_space"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_email"
            android:textSize="@dimen/service_content_text"
            android:textColor="@color/highlight"
            android:fontFamily="@font/noto_sans_cjk_kr_bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/service_subtitle3"
            android:textSize="@dimen/service_content_text"
            android:textColor="@color/dark"
            android:fontFamily="@font/noto_sans_cjk_kr_medium" />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/service_box"
        android:hint="@string/service_hint"
        android:textColor="@color/dark"
        android:textSize="@dimen/service_content_text"
        android:fontFamily="@font/noto_sans_cjk_kr_medium"
        android:gravity="top"
        android:layout_marginTop="@dimen/service_box_margin_top"
        android:layout_marginStart="@dimen/mypage_subtitle_margin_horizontal"
        android:layout_marginEnd="@dimen/mypage_subtitle_margin_horizontal"
        android:padding="@dimen/service_box_padding"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/mypage_subtitle_margin_horizontal"
        android:layout_marginEnd="@dimen/mypage_subtitle_margin_horizontal"
        android:layout_marginTop="@dimen/service_submit_margin_vertical"
        android:layout_marginBottom="@dimen/service_submit_margin_vertical"
        android:gravity="center">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accept_email"
            android:textColor="@color/dark"
            android:textSize="@dimen/service_content_text"
            android:fontFamily="@font/noto_sans_cjk_kr_medium"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send"
            android:textSize="@dimen/myprofile_btn_text"
            android:textColor="@android:color/white"
            android:fontFamily="@font/noto_sans_cjk_kr_regular"
            android:paddingStart="@dimen/myprofile_btn_padding_horizontal"
            android:paddingEnd="@dimen/myprofile_btn_padding_horizontal"
            android:paddingTop="@dimen/myprofile_btn_padding_vertical"
            android:paddingBottom="@dimen/myprofile_btn_padding_vertical"
            android:background="@drawable/btn_dark"/>
    </LinearLayout>
</LinearLayout>