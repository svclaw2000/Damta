<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/topbar_padding_horizontal">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/medium_icon"
            android:layout_height="@dimen/medium_icon"
            android:src="@drawable/back_arrow"
            android:layout_gravity="bottom|start"
            android:layout_marginVertical="@dimen/back_margin" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mypage_title_green"
                android:layout_marginStart="@dimen/mypage_title_green_margin_start"
                android:layout_marginTop="@dimen/mypage_title_green_margin_top">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/mypage_title_text"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/noto_sans_cjk_kr_medium"
                    android:padding="@dimen/mypage_title_padding"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mypage_title_dark"
                android:layout_marginStart="@dimen/mypage_title_dark_margin_start"
                android:layout_marginTop="@dimen/mypage_title_dark_margin_top">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_profile"
                    android:textSize="@dimen/mypage_title_text"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/noto_sans_cjk_kr_medium"
                    android:padding="@dimen/mypage_title_padding"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_profile_title"
        android:textSize="@dimen/mypage_subtitle_text"
        android:textColor="@color/dark"
        android:fontFamily="@font/noto_sans_cjk_kr_bold"
        android:layout_marginVertical="@dimen/mypage_subtitle_margin_vertical"
        android:layout_marginHorizontal="@dimen/mypage_subtitle_margin_horizontal"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/myprofile_input_margin_horizontal">

        <TableRow
            android:layout_marginVertical="@dimen/myprofile_input_margin_vertical">
            <TextView
                android:text="@string/user_nick"
                android:textColor="@color/dark"
                android:textSize="@dimen/mypage_content_text"
                android:fontFamily="@font/noto_sans_cjk_kr_bold"
                android:layout_marginHorizontal="@dimen/myprofile_input_title_margin_horizontal"/>

            <EditText
                android:id="@+id/et_nickname"
                android:layout_weight="1"
                tools:text="유정"
                android:textColor="@color/mypage_gray"
                android:backgroundTint="@color/mypage_half_gray"
                android:enabled="false"
                android:textSize="@dimen/mypage_content_text"
                android:fontFamily="@font/noto_sans_cjk_kr_regular"
                android:paddingHorizontal="@dimen/input_padding_horizontal"/>
        </TableRow>

        <TableRow
            android:layout_marginVertical="@dimen/myprofile_input_margin_vertical">
            <TextView
                android:text="@string/user_bday"
                android:textColor="@color/dark"
                android:textSize="@dimen/mypage_content_text"
                android:fontFamily="@font/noto_sans_cjk_kr_bold"
                android:layout_marginHorizontal="@dimen/myprofile_input_title_margin_horizontal" />

            <EditText
                android:id="@+id/et_birthday"
                android:layout_weight="1"
                tools:text="1999.11.23"
                android:textColor="@color/mypage_gray"
                android:backgroundTint="@color/mypage_half_gray"
                android:enabled="false"
                android:textSize="@dimen/mypage_content_text"
                android:fontFamily="@font/noto_sans_cjk_kr_regular"
                android:focusable="false"
                android:paddingHorizontal="@dimen/input_padding_horizontal"/>
        </TableRow>

        <TableRow
            android:layout_marginVertical="@dimen/myprofile_input_margin_vertical">
            <TextView
                android:text="@string/user_email"
                android:textColor="@color/dark"
                android:textSize="@dimen/mypage_content_text"
                android:fontFamily="@font/noto_sans_cjk_kr_bold"
                android:layout_marginHorizontal="@dimen/myprofile_input_title_margin_horizontal"/>

            <EditText
                android:id="@+id/et_email"
                android:layout_weight="1"
                tools:text="s2yujeong@naver.com"
                android:textColor="@color/mypage_gray"
                android:backgroundTint="@color/mypage_half_gray"
                android:enabled="false"
                android:textSize="@dimen/mypage_content_text"
                android:fontFamily="@font/noto_sans_cjk_kr_regular"
                android:paddingHorizontal="@dimen/input_padding_horizontal"/>
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_profile"
        android:textSize="@dimen/myprofile_btn_text"
        android:textColor="@android:color/white"
        android:fontFamily="@font/noto_sans_cjk_kr_regular"
        android:paddingHorizontal="@dimen/myprofile_btn_padding_horizontal"
        android:paddingVertical="@dimen/myprofile_btn_padding_vertical"
        android:background="@drawable/btn_dark"
        android:layout_gravity="end"
        android:layout_margin="@dimen/myprofile_input_margin_horizontal"/>
</LinearLayout>