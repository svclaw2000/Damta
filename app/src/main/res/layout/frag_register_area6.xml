<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/register_content_padding_horizontal"
    android:paddingEnd="@dimen/register_content_padding_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number_point_6"
            android:fontFamily="@font/noto_sans_cjk_kr_bold"
            android:textSize="@dimen/register_title_text"
            android:textColor="@color/highlight"
            android:layout_marginTop="@dimen/register_number_margin_top"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_information_6"
            android:fontFamily="@font/noto_sans_cjk_kr_bold"
            android:textSize="@dimen/register_title_text"
            android:textColor="@color/dark"
            android:layout_marginTop="@dimen/register_title_margin_top"
            android:layout_marginStart="@dimen/register_title_margin_start"/>
    </LinearLayout>

    <TextView
        android:id="@+id/btn_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_highlight"
        android:text="@string/attach_image"
        android:textColor="@android:color/white"
        android:textSize="@dimen/register_image_btn_text"
        android:fontFamily="@font/noto_sans_cjk_kr_bold"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/register_image_btn_margin_top"
        android:paddingTop="@dimen/register_image_btn_padding_vertical"
        android:paddingBottom="@dimen/register_image_btn_padding_vertical"
        android:paddingStart="@dimen/register_image_btn_padding_horizontal"
        android:paddingEnd="@dimen/register_image_btn_padding_horizontal"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
