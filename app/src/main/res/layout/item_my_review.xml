<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/bookmark_margin_horizontal"
    android:layout_marginEnd="@dimen/bookmark_margin_horizontal"
    android:layout_marginTop="@dimen/bookmark_margin_vertical"
    android:layout_marginBottom="@dimen/bookmark_margin_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="원조 갈매기집"
            android:textColor="@color/dark"
            android:textSize="@dimen/bookmark_name_text"
            android:fontFamily="@font/noto_sans_cjk_kr_bold" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="국가 흡연부스 (폐쇄형)"
            android:textColor="@color/dark"
            android:textSize="@dimen/bookmark_type_text"
            android:fontFamily="@font/noto_sans_cjk_kr_bold"
            android:layout_marginStart="@dimen/small_space"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="서울특별시 중구 을지로 3길 19"
                android:textColor="@color/bookmark_gray"
                android:textSize="@dimen/bookmark_address_text"
                android:fontFamily="@font/noto_sans_cjk_kr_regular" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/review"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/bookmark_reviews_text"
                    android:fontFamily="@font/noto_sans_cjk_kr_bold" />

                <TextView
                    android:id="@+id/tv_review_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="10"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/bookmark_reviews_text"
                    android:fontFamily="@font/noto_sans_cjk_kr_bold"
                    android:layout_marginStart="@dimen/small_space"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <CheckBox
                    android:id="@+id/cb_thumb"
                    android:layout_width="@dimen/small_icon"
                    android:layout_height="@dimen/small_icon"
                    android:background="@drawable/thumb"
                    android:button="@color/invisible" />

                <TextView
                    android:id="@+id/tv_thumb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="21"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/bookmark_thumb_text"
                    android:fontFamily="@font/noto_sans_cjk_kr_bold" />
            </LinearLayout>
        </LinearLayout>

        <CheckBox
            android:id="@+id/cb_bookmark"
            android:layout_width="@dimen/bookmark_small_width"
            android:layout_height="@dimen/bookmark_small_height"
            android:background="@drawable/bookmark"
            android:button="@color/invisible"
            android:layout_gravity="center|end"
            android:layout_marginStart="@dimen/bookmark_bookmark_margin_horizontal"
            android:layout_marginEnd="@dimen/bookmark_bookmark_margin_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/review_title_margin_horizontal"
        android:layout_marginEnd="@dimen/review_title_margin_horizontal"
        android:layout_marginTop="@dimen/small_space">

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="구파발발이(dksjqos23)"
            android:textSize="@dimen/review_id_text"
            android:textColor="@color/dark"
            android:fontFamily="@font/noto_sans_cjk_kr_bold"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="(2020.03.29)"
            android:textSize="@dimen/review_date_text"
            android:textColor="@color/half_dark"
            android:fontFamily="@font/noto_sans_cjk_kr_regular"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="다른 데보다 여기가 확실히 깨끗해요 …!\n근데 좀 사람이 많아서 시끄럽다는 점 그게 아쉽긴 해요 "
        android:textSize="@dimen/review_text"
        android:fontFamily="@font/noto_sans_cjk_kr_medium"
        android:textColor="@color/dark"
        android:background="@drawable/review_box"
        android:paddingStart="@dimen/review_padding_horizontal"
        android:paddingEnd="@dimen/review_padding_horizontal"
        android:paddingTop="@dimen/review_padding_vertical"
        android:paddingBottom="@dimen/review_padding_vertical"
        android:layout_marginTop="@dimen/review_content_margin_top"/>
</LinearLayout>